<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="250" height="95%" title="Options">
	
	<mx:Script>
		<![CDATA[
			import mx.events.StateChangeEvent;
			
			
			private function filterCheck(e:Event):void
			{
				if(this.checkAll.selected == true){
					this.checkAdmissions.enabled = false;
					this.checkBank.enabled = false;
					this.checkBuildings.enabled = false;
					this.checkEntertainment.enabled = false;
					this.checkFood.enabled = false;
					this.checkLeisure.enabled = false;
					this.checkShop.enabled = false;
					
				}else{
					this.checkAdmissions.enabled = true;
					this.checkBank.enabled = true;
					this.checkBuildings.enabled = true;
					this.checkEntertainment.enabled = true;
					this.checkFood.enabled = true;
					this.checkLeisure.enabled = true;
					this.checkShop.enabled = true;
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:Accordion top="0" left="0" right="0" bottom="0">
		<mx:Canvas label="Map Filter" width="100%" height="100%">
			<mx:CheckBox x="10" y="40" label="Department Buildings" id="checkBuildings"  enabled="false"/>
			<mx:CheckBox x="10" y="70" label="Admissions office" id="checkAdmissions" enabled="false"/>
			<mx:CheckBox x="10" y="100" label="Shop" id="checkShop" enabled="false"/>
			<mx:CheckBox x="10" y="130" label="Bank" id="checkBank" enabled="false"/>
			<mx:CheckBox x="10" y="160" label="Food" id="checkFood" enabled="false"/>
			<mx:CheckBox x="10" y="190" label="Drink and Entertainment" id="checkEntertainment" enabled="false"/>
			<mx:CheckBox x="10" y="220" label="Leisure Center" id="checkLeisure" enabled="false"/>
			<mx:CheckBox x="10" y="10" label="All" selected="true" id="checkAll" change="filterCheck(event)"/>
		</mx:Canvas>
		<mx:HDividedBox label="Images" width="100%" height="100%">
		</mx:HDividedBox>
		<mx:Tile label="Video" width="100%" height="100%">
		</mx:Tile>
	</mx:Accordion>
</mx:Panel>
